<h1>Edit Project</h1>
  <form action="/projects/<%= @project.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">

    <label for="edit_title">Title:</label>
    <input type="text" name="title" value="<%= @project.title %>" required><br><br>
    <label for="edit_description">Description:</label>
    <input type="text" name="description" value="<%= @project.description %>" required><br><br>
    <label for="edit_cost">Estimated Cost:</label>
    <input type="text" name="cost" value="<%= @project.cost %>" required><br><br>

    <input class="button" type="submit" name="submit" id="submit" value="Submit Edit">

  </form>
  

  <form action="/projects/<%= @project.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="DELETE">
    <input class="button" type="submit" value="Delete Project">
  </form>